{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ESNext",
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "lib": ["ES2021", "dom"],
    "skipLibCheck": true,
    "moduleResolution": "node10",
    "isolatedModules": true,
    "moduleDetection": "force",
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "noEmit": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
